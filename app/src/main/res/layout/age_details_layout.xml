        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facts"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:radius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/BirthdayCountDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Intresting Facts:"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtFactHeartBeat"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Average resting heart rate: ~75 beats per minute"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtFactSleep"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Average sleep time: 8 hours/day"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtFactMeals"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Average meals/day: 3"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtFactWater"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Average water intake: 2.5 liters/day"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtFactSteps"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Average steps/day: 5,000–7,000 (for a moderate lifestyle)"
            android:textColor="@color/black"
            />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zodiac"
            android:layout_margin="5dp"
            android:elevation="5dp"
            android:radius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/facts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/txtZodiacSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Zodiac Sign: Pisces"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:textAlignment="center"
                />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>